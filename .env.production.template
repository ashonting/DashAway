# Production Environment Variables Template for DashAway
# COPY this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control!

# Database Configuration
DATABASE_URL=your-supabase-database-url-here

# Admin Configuration
ADMIN_USERNAME=your-admin-username
ADMIN_PASSWORD=your-secure-admin-password

# Authentication Secrets
JWT_SECRET=your-jwt-secret-here
NEXTAUTH_SECRET=your-nextauth-secret-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# NextAuth.js Configuration
NEXTAUTH_URL=https://dashaway.io

# CORS Configuration
CORS_ORIGINS=https://dashaway.io,https://www.dashaway.io

# Frontend API URL
NEXT_PUBLIC_API_URL=https://dashaway.io

# Production-specific settings
NODE_ENV=production
ENVIRONMENT=production

# Port configurations
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Paddle Configuration
PADDLE_API_KEY=your-paddle-api-key-here
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret-here
PADDLE_VENDOR_ID=your-paddle-vendor-id-here

# Product/Price IDs from Paddle Dashboard
PADDLE_PRO_PRODUCT_ID=your-paddle-pro-product-id-here
PADDLE_PRO_MONTHLY_PRICE_ID=your-paddle-pro-monthly-price-id-here
PADDLE_PRO_YEARLY_PRICE_ID=your-paddle-pro-yearly-price-id-here